<%- include('../partials/header') %>

<div class="container mt-4">
  <table id="list" class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Journal title</th>
        <th>Journal info</th>
      </tr>
    </thead>
    <tbody>
      <% journals.forEach(function(m) { %>
        <tr>
          <td><%= m.title %></td>
          <td>
            <%= m.releaseYear %>
            <a href="/journals/<%= m._id %>">
              <button type="button" class="btn btn-outline-info btn-sm">Click to see</button>
            </a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>