<%- include('../partials/header') %>

<h2>Create New Journal Entry</h2>

<form action="/journals" method="POST">
  <div>
    <label for="title">Date:</label>
    <input type="text" id="title" name="title" required>
  </div>
  <div>
    <label for="morningEntry">Morning Entry:</label>
    <textarea id="morningEntry" name="morningEntry" rows="4" required></textarea>
  </div>
  <div>
    <label for="noonEntry">Noon Entry:</label>
    <textarea id="noonEntry" name="noonEntry" rows="4" required></textarea>
  </div>
  <div>
    <label for="eveningEntry">Evening Entry:</label>
    <textarea id="eveningEntry" name="eveningEntry" rows="4" required></textarea>
  </div>
  <button type="submit">Create Entry</button>
</form>

<%- include('../partials/footer') %>